<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".login.CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.84" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="22dp"
            android:layout_weight="0.16"
            android:background="@drawable/area_background"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingHorizontal="25dp">

            <EditText
                android:id="@+id/mailCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_text"
                android:hint="Ingresar Correo"
                android:padding="16dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/nameCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_text"
                android:hint="Ingresar Nombre"
                android:padding="16dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/userCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_text"
                android:hint="Ingresar Usuario"
                android:padding="16dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/passwordCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_text"
                android:hint="Ingresar Contraseña"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/confirmCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_text"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/registrarAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:text="Registrar"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="¿Tienes cuenta?"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/returnToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Regresar"
                    android:onClick="goLogin"
                    android:textColor="@color/teal_700"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>